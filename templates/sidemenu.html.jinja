{% extends 'base.html.jinja' %}

{% block styles %}
{{ super() }}
<link href="/styles/mainSidebar.css" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}

<div class="side-menu" id="side-menu">
    <div id="menu">
        <a href="/">
            <div class="side-menu title" id="website-name">
                <img class="side-menu title" id="website-name-image" src="/public/Website Name.png" width="117px">
                <img class="side-menu title hidden" id="website-logo" src="/public/Website Logo.png" width="117px">
            </div>
        </a>
        <div class="side-menu navigation" id="side-menu-navigation">

            <a class="side-menu navigation button link home" href="/">
                <div class="side-menu navigation container button home">
                    <img class="side-menu navigation home image bw-icon" alt="home icon" width="35px" height="35px" {%
                        block home %} src="/public/home unselected.png" {% endblock %}>
                    <p class="side-menu navigation home text">Home</p>
                </div>
            </a>

            {# <a class="side-menu navigation button link friends" href="#friends">
                <div class="side-menu navigation container button friends">
                    <img class="side-menu navigation friends image bw-icon" alt="friends icon" width="35px"
                        height="35px" {% block friends %} src="/public/friends unselected.png" {% endblock %}>
                    <p class="side-menu navigation friends text">Friends</p>
                </div>
            </a> #}

            <a class="side-menu navigation button link notifs" onclick="showNotifs()" style="cursor: pointer;">
                <div class="side-menu navigation container button notifs">
                    <img class="side-menu navigation notifs image bw-icon" alt="notifs icon" width="35px" height="35px"
                        {% block notifs %} src="/public/notif unselected.png" {% endblock %}>
                    <p class="side-menu navigation notifs text">Notifs</p>
                </div>
            </a>

            {# <a class="side-menu navigation button link archive" href="/archive">
                <div class="side-menu navigation container button archive">
                    <img class="side-menu navigation archive image bw-icon" alt="archive icon" width="35px"
                        height="35px" {% block archive %} src="/public/archive unselected.png" {% endblock %}>
                    <p class="side-menu navigation archive text">Archive</p>
                </div>
            </a> #}

            <a class="side-menu navigation button link newPost" href="/submit">
                <div class="side-menu navigation container button newPost">
                    <img class="side-menu navigation newPost image bw-icon" alt="post icon" width="35px" height="35px" {%
                        block post %} src="/public/post unselected.png" {% endblock %}>
                    <p class="side-menu navigation newPost text">Post</p>
                </div>
            </a>

            <a class="side-menu navigation button link profile" href="/hanko/profile" id="profile-a">
                <div class="side-menu navigation container button profile">
                    <img class="side-menu navigation profile image bw-icon" alt="profile icon" width="35px"
                        height="35px" {% block profile %} src="/public/profile unselected.png" {% endblock %}>
                    <p class="side-menu navigation profile text" id="profile-p">Profile</p>
                </div>
            </a>

            <a class="side-menu navigation button link settings" href="/settings" id="setting">
                <div class="side-menu navigation container button settings">
                    <img class="side-menu navigation settings image bw-icon" alt="settings icon" width="35px"
                        height="35px" {% block settings %} src="/public/settings unselected.png" {% endblock %}>
                    <p class="side-menu navigation settings text">Settings</p>
                </div>
            </a>

        </div>

    </div>

    <div class="side-menu notifications hidden" id="notif-div">
        <h2 class="side-menu notifications title centered" id="notif-title">Notifications</h2>
        <div class="side-menu notifications notifs" id="notifs"></div>
    </div>
</div>

<div id="main">
    {% block content %} {% endblock %}
</div>
{% endblock %}

{% block bodyScripts %}
<script src="/scripts/sidemenu.js"></script>
<script src="/scripts/friendships.js"></script>
{% endblock %}